<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - A place where you can pick your friends</title>
        <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
        <script src="http://fb.me/react-0.12.2.js"></script>
        <script src="@Url.Content("~/Scripts/DayPilot/daypilot-all.min.js")" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="banner">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a href='@Url.Action("Index", "Home")' class="navbar-brand">
                            <img src='@Url.Content("https://pbs.twimg.com/profile_images/2029688967/Betty_Photo.jpg")' />
                            The Nose Book
                        </a>
                    </div>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="navbar navbar-default navbar-fixed-bottom" >
                <div class="container-fluid">
                    <p class="navbar-text">&copy; @DateTime.Now.Year - The Nose Book</p>
                    <div class="fb-like navbar-text navbar-right"
                         data-share="true"
                         data-width="450"
                         data-show-faces="true">
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
